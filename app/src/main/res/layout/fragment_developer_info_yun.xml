<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Title -->
    <View
        android:id="@+id/view2"
        android:layout_width="296dp"
        android:layout_height="95dp"
        android:background="@drawable/profilewidget"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="WHAT TO EAT \n Team"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <!--Photo and name-->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/developer_photo"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/developer_name10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_photo"
                android:layout_centerHorizontal="true"
                android:text="Kuzey\nHamidoglu"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/developer_photo"
                app:layout_constraintStart_toStartOf="@+id/developer_photo"
                app:layout_constraintTop_toBottomOf="@+id/developer_photo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/developer_photo5"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/developer_name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_photo"
                android:layout_centerHorizontal="true"
                android:text="Lucca\nGeldens"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/developer_photo5"
                app:layout_constraintStart_toStartOf="@+id/developer_photo5"
                app:layout_constraintTop_toBottomOf="@+id/developer_photo5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/developer_photo6"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/developer_name7"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_photo"
                android:layout_centerHorizontal="true"
                android:text="Yunsu\nKim"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/developer_photo6"
                app:layout_constraintStart_toStartOf="@+id/developer_photo6"
                app:layout_constraintTop_toBottomOf="@+id/developer_photo6" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tableRow1"
        app:layout_constraintStart_toStartOf="@+id/tableRow1"
        app:layout_constraintTop_toBottomOf="@+id/tableRow1"
        android:layout_marginVertical="24dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/developer_photo7"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/developer_name8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_photo"
                android:layout_gravity="center"
                android:text="Gijs\nKruize"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/developer_photo7"
                app:layout_constraintStart_toStartOf="@+id/developer_photo7"
                app:layout_constraintTop_toBottomOf="@+id/developer_photo7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/developer_photo8"
                android:layout_width="68dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/developer_name6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_photo"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Rik\nJanssen"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/developer_photo8"
                app:layout_constraintStart_toStartOf="@+id/developer_photo8"
                app:layout_constraintTop_toBottomOf="@+id/developer_photo8" />
        </LinearLayout>
    </TableRow>
    <!-- Detail -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="@drawable/gray_bar_background"
            app:layout_constraintTop_toBottomOf="@+id/tableRow2"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="Inspired by the idea of finding what to eat in a matter of a few clicks, the group is developing WHAT TO EAT? This way users can save time and energy while selecting dinner."
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/view3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All rights reserved to group 11"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>